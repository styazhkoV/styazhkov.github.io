---
const links = [
  { href: '/', label: 'Главная' },
  { href: '/about', label: 'О нас' },
  { href: '/cases', label: 'Кейсы' },
  { href: '/blog', label: 'Блог' },
];
---

<nav class="bg-gray-800 p-4">
  <ul class="flex space-x-6 text-white">
    {links.map(link => (
      <li>
        <a 
          href={link.href} 
          class="hover:text-yellow-400 transition-colors"
        >
          {link.label}
        </a>
      </li>
    ))}
  </ul>
</nav>
