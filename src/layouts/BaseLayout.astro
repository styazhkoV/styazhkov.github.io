---
const { title, description = "Портфолио системного и бизнес-аналитика" } =
    Astro.props;
import "../styles/global.css";
import ThemeToggle from "../components/ThemeToggle.astro";

const githubUrl = "https://github.com/styazhkoV";
const baseUrl = import.meta.env.BASE_URL;
---

<html lang="ru">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <meta name="author" content="Стяжков" />

        <!-- Open Graph / Social -->
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:type" content="website" />
        <meta property="og:locale" content="ru_RU" />

        <!-- Favicon -->
        <link rel="icon" type="image/svg+xml" href={`${baseUrl}favicon.svg`} />

        <title>{title}</title>

        <!-- Prevent theme flash -->
        <script is:inline>
            const theme =
                localStorage.getItem("theme") ||
                (window.matchMedia("(prefers-color-scheme: dark)").matches
                    ? "dark"
                    : "light");
            if (theme === "dark") {
                document.documentElement.classList.add("dark");
            }
        </script>
    </head>
    <meta
        name="google-site-verification"
        content="xrnWBINY_mvjJ1vLXStmJ780_g8g8OC3rkqhSvJKtts"
    />
    <body class="bg-primary min-h-screen flex flex-col">
        <!-- Header -->
        <header
            class="bg-secondary border-b border-themed sticky top-0 z-50 backdrop-blur-sm bg-opacity-90"
        >
            <div
                class="max-w-6xl mx-auto px-4 py-4 flex justify-between items-center"
            >
                <a
                    href={baseUrl}
                    class="text-xl font-bold tracking-tight text-gradient hover:opacity-80 transition-opacity"
                >
                    STYAZHKOV.ANALYSIS
                </a>

                <nav class="flex items-center gap-6">
                    <div
                        class="hidden md:flex items-center gap-6 text-sm font-medium"
                    >
                        <a
                            href="#about"
                            class="text-secondary hover:text-primary transition-colors"
                        >
                            Обо мне
                        </a>
                        <a
                            href="#skills"
                            class="text-secondary hover:text-primary transition-colors"
                        >
                            Навыки
                        </a>
                        <a
                            href="#certificates"
                            class="text-secondary hover:text-primary transition-colors"
                        >
                            Сертификаты
                        </a>
                        <a
                            href="#cases"
                            class="text-secondary hover:text-primary transition-colors"
                        >
                            Кейсы
                        </a>
                        <a
                            href="#contact"
                            class="text-secondary hover:text-primary transition-colors"
                        >
                            Контакт
                        </a>
                        <a
                            href={githubUrl}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-secondary hover:text-primary transition-colors flex items-center gap-1"
                        >
                            <svg
                                class="w-4 h-4"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                                ></path>
                            </svg>
                            GitHub
                        </a>
                    </div>

                    <ThemeToggle />

                    <!-- Mobile menu button -->
                    <button
                        id="mobile-menu-btn"
                        class="md:hidden p-2 rounded-lg bg-tertiary border border-themed"
                        aria-label="Открыть меню"
                    >
                        <svg
                            class="w-5 h-5 text-secondary"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>
                </nav>
            </div>

            <!-- Mobile menu -->
            <div
                id="mobile-menu"
                class="hidden md:hidden border-t border-themed"
            >
                <nav class="flex flex-col p-4 gap-4 text-sm font-medium">
                    <a
                        href="#about"
                        class="text-secondary hover:text-primary transition-colors"
                        >Обо мне</a
                    >
                    <a
                        href="#skills"
                        class="text-secondary hover:text-primary transition-colors"
                        >Навыки</a
                    >
                    <a
                        href="#certificates"
                        class="text-secondary hover:text-primary transition-colors"
                        >Сертификаты</a
                    >
                    <a
                        href="#cases"
                        class="text-secondary hover:text-primary transition-colors"
                        >Кейсы</a
                    >
                    <a
                        href="#contact"
                        class="text-secondary hover:text-primary transition-colors"
                        >Контакт</a
                    >
                    <a
                        href={githubUrl}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-secondary hover:text-primary transition-colors"
                        >GitHub</a
                    >
                </nav>
            </div>
        </header>

        <!-- Main Content -->
        <main class="flex-1">
            <slot />
        </main>

        <!-- Footer -->
        <footer class="bg-secondary border-t border-themed">
            <div class="max-w-6xl mx-auto px-4 py-8">
                <div
                    class="flex flex-col md:flex-row justify-between items-center gap-4"
                >
                    <p class="text-muted text-sm">
                        © {new Date().getFullYear()} Стяжков. Сделано с помощью Astro.
                    </p>
                    <div class="flex items-center gap-4">
                        <a
                            href={githubUrl}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-muted hover:text-primary transition-colors"
                        >
                            <svg
                                class="w-5 h-5"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                                ></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </footer>

        <!-- Mobile menu script -->
        <script>
            const mobileMenuBtn = document.getElementById("mobile-menu-btn");
            const mobileMenu = document.getElementById("mobile-menu");

            mobileMenuBtn?.addEventListener("click", () => {
                mobileMenu?.classList.toggle("hidden");
            });

            // Close mobile menu when clicking on a link
            mobileMenu?.querySelectorAll("a").forEach((link) => {
                link.addEventListener("click", () => {
                    mobileMenu?.classList.add("hidden");
                });
            });
        </script>
    </body>
</html>
